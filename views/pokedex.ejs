<div class="container">
    <div class="row">
        <h1 class="text-center"><%= title %></h1>
        <hr>
    </div>
    <div class="row">
        <% pokemons.forEach(function(item) {%>
            <div class="col-lg-4 col-md-4 col-12 mb-3">
                <div style="border: 2px dashed blueviolet; padding: 5px;">
                    <div style="background-color: rgb(240, 56, 124); padding: 1px;">
                        <h2 style="color: aliceblue; text-align: center;"><%= item.name.charAt(0).toUpperCase() + item.name.slice(1) %></h2>
                    </div>
                    <div class="pokemon-single">
                        <div class="pokemon-img">
                            <img src="<%= item.img_url %>"
                            style="height: 300px; width: 100%;" alt="<%= item.name %>">
                            <audio controls class="mt-4">
                                <source src="<%= item.sound_url %>" type="audio/ogg">
                                Tarayıcınız ses elementini desteklemiyor.
                            </audio>
                        </div>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-12 text-center">
            <a href="?page=<%=+page-1%>" class="btn btn-primary <%= +page-1 < 1 ? 'disabled' : ''%>"><</a>
            <div style="display: inline-block; width: 75px;" class="text-center">
                <%=page%> / <%= maxPage %>
            </div>
            <a href="?page=<%=(+page+1)%>" class="btn btn-primary <%= +page == maxPage ? 'disabled' : ''%>"">></a>
        </div>
    </div>
</div>